services:
  it-tools:
    container_name: it-tools
    image: corentinth/it-tools
    security_opt:
      - no-new-privileges:true
    restart: unless-stopped
    networks:
      - t3_proxy
    environment:
      - TZ=$TZ
    labels:
      - "traefik.enable=true"
      # HTTP Routers
      - "traefik.http.routers.it-tools-rtr.entrypoints=websecure"
      - "traefik.http.routers.it-tools-rtr.rule=Host(`it-tools.$DOMAINNAME_1`)"
      # Middlewares
      - "traefik.http.routers.it-tools-rtr.middlewares=chain-external-authentik@file"
      # HTTP Services
      - "traefik.http.routers.it-tools-rtr.service=it-tools-svc"
      - "traefik.http.services.it-tools-svc.loadbalancer.server.port=80"